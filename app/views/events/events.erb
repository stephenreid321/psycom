<div class="row justify-content-between">
  <div class="col">
    <h1 style="margin-top: 0"><%=I18n.t(:events).capitalize%></h1>
  </div>
  <div class="col-auto">
    <a class="btn btn-primary" href="/events/new"><i class="fa fa-plus"></i> <%=I18n.t(:add_an_event).capitalize%></a>
  </div>
</div>

<style>
  #events h3 { font-size: 22px; line-height: 150%; margin-bottom: 8px; margin-top: 0 }
</style>
<div id="events">
  <% Event.future.each { |event| %>
    <hr />
    <%= partial :'events/event', :locals => {:event => event} %>
  <% } %>
</div>
