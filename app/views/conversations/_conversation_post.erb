
<div class="media">
  <span class="mr-3">
    <%= partial :'accounts/square', :locals => {:account => conversation_post.account, :style => 'width: 32px;'} %>
  </span>
  <div class="media-body">

    <div>

      <div class="row justify-content-between">
        <div class="col">
          <a href="/<%=conversation_post.account.username_or_id%>" style="font-weight: bold;"><%=conversation_post.account.name%></a>            
        </div>
        <div class="col-auto">
          <% if ((@membership and @membership.admin?) or (current_account and current_account.admin?)) %>
            <a title="Hide post" data-confirm="Are you sure you want to hide this post?"  href="/conversations/<%=conversation_post.conversation.slug%>/hide_post/<%=conversation_post.id%>"><i class="fa fa-times"></i> Hide post</a>
          <% end %>
        </div>
      </div>      

      <div id="conversation-post-<%=conversation_post.id%>" style="margin-bottom: 1em"><%= Rinku.auto_link(conversation_post.body) %></div>

      <%= partial :'conversations/conversation_post_attachments', :locals => {:conversation_post => conversation_post} %>

    </div>

    <div class="conversation-post-info bg-light p-2 mb-2 rounded">
      <%= partial :'conversations/conversation_post_info', :locals => {:conversation_post => conversation_post} %>
    </div>

  </div>
</div> 
