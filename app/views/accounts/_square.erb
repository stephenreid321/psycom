<div style="position: relative; display: inline-block">
  <% if !defined?(content) %><a href="/<%=account.username_or_id%>"><% end %>
    <img <% if defined?(klass) %> class="<%=klass%>" <% else %> class="rounded-circle"<% end %> <% if !defined?(content) %>data-toggle="tooltip" title="<%=account.name%>"<% else %>data-toggle="popover"<% end %> <% if defined?(style) %> style="<%= style%>" <% else %> style="width: <%=width%>;" <% end %> src="<%=account.picture ? account.picture.thumb('400x400#').url : "https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(account.email.downcase)}?s=400&d=#{URI::encode("#{Config['BASE_URI']}/images/silhouette.png")}" %>" />
    <% if defined?(content) %>
      <span style="display: none">
        <a href="/<%=account.username_or_id%>"><%=account.name%></a>
      </span>
      <span style="display: none">
        <%=content%>
      </span>
    <% end %>
    <% if !defined?(content) %></a><% end %>
</div>
