
<p><%= page_entries_info @accounts, :model => 'Person' %></p>

<% @accounts.each { |account| %>
  <div class="media">
    <span class="mr-3">      
      <a href="/<%=account.username_or_id%>">
        <img style="width: 32px" src="<%=account.picture ? account.picture.thumb('32x32#').url : '/images/silhouette.png' %>">
      </a>
    </span>
    <div class="media-body">    
      <a href="/<%=account.username_or_id%>"><%=account.name%></a>
    </div>
  </div> 
<% } %>

<div style="text-align: center">
  <%= will_paginate @accounts, :renderer => WillPaginate::ViewHelpers::BootstrapRenderer, :page_links => false %>
</div>