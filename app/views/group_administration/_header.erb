
<% @pills = [
  ['<i class="fa fa-group"></i> ' + I18n.t(:manage_members).capitalize, "/groups/#{@group.slug}/manage_members"],
  ['<i class="fa fa-plus"></i> ' + I18n.t(:add_members).capitalize, "/groups/#{@group.slug}/add_members"],
