  ['<i class="fa fa-envelope"></i> ' + I18n.t(:emails).capitalize, "/groups/#{@group.slug}/emails"],
  ['<i class="fa fa-question"></i> ' + I18n.t(:did_you_know).capitalize, "/groups/#{@group.slug}/didyouknows"],
