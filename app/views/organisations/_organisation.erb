<div class="media">
  <a class="pull-left">
    <img style="max-width: 64px" src="<%=organisation.picture ? organisation.picture.thumb('64x64#').url : '/images/square.png' %>">
  </a>
  <div class="media-body">
    <h4 class="media-heading"><a href="/organisations/<%=organisation.id%>"><%=organisation.name%></a></h4>      
    <ul class="fa-ul">
      <% if organisation.website%>
        <li><i title="Website" class="fa-li fa fa-globe"></i><a target="_blank" href="<%=organisation.website%>"><%=organisation.website%></a></li>
      <% end %>
      <% if !organisation.sectorships.empty?%>
        <li><i title="Sectors" class="fa-li fa fa-tags"></i><%organisation.sectorships.each { |sectorship|%><a href="/sectors/<%=sectorship.sector_id%>"><span class="label label-primary" style="text-indent: 0"><%=sectorship.sector.name%></span></a> <% } %></li>
          <% end %>              
    </ul>
  </div>
</div>   