<ol class="breadcrumb">
  
  <li class="breadcrumb-item"><a href="/groups"><%=I18n.t(:groups).capitalize%></a></li>
  <li class="breadcrumb-item"><a href="/groups/<%=@group.slug%>"><%=@group.name%></a></li>
