<div style="text-align: center">

  <div class="card">
    <h3 class="card-header"><%=group.slug%> has <%=pluralize(group.members.count,'member')%></h3>
    <div class="card-body">

      <p class="lead">Join them!</p>

      <% form_for Account.new, "/groups/#{group.slug}/join", :method => 'get', :class => 'form-horizontal' do |f| %>
        <% if !current_account %>
          <%= f.text_block :name %>
          <%= f.text_block :email %>     
        <% end %>
        <button type="submit" class="btn btn-primary">Join</button>
      <% end %> 


      <% random(group.members.where(:picture_uid.ne => nil), 9).each {  |account| %>
        <img style="margin: 10px; width: 90px" title="<%=account.name.split(' ').first%>" class="rounded-circle img-bordered" src="<%=account.picture ? account.picture.thumb('100x100#').url : "https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(account.email.downcase)}?s=400&d=#{URI::encode("#{ENV['BASE_URI']}/images/silhouette.png")}" %>">
      <% } %>

    </div>
  </div>

</div>